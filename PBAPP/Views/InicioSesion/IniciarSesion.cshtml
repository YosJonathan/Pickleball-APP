    <script>
        document.querySelector('[data-handler="handler_0"]').addEventListener("click", (e) => {
            const input = e.target.closest(".relative").querySelector("input")
            input.type = input.type === "password" ? "text" : "password"
            e.target.textContent = input.type === "password" ? "visibility" : "visibility_off"
        })
    </script>
</body>
</html>
